<form>

  <h1>My tasks</h1>

  <div class="form-check">
    <ul class="list-unstyled">
      <% @tasks.each do |task| %>
        <li>
          <% if task.completed %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <%= link_to task.title, task_path(task.id) %>
          <%= "â€¢" %>
          <%=link_to "", task_path(task.id), method: :delete, data: {confirm: "Are you sure?"}, class:"fas fa-trash-alt"%>
        </li>
      <% end %>
    </ul>

    <h3><i class="fas fa-plus"></i><%= link_to "Add new task", new_task_path %></h>

  </div>
</div>

</form>




